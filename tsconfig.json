{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "es6",
    "target": "ESNext",
    "jsx": "react",
    "sourceMap": true,
    "typeRoots": ["custom.d.ts"],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "&models/*": ["./src/models/*"],
      "&features/*": ["src/features/*"],
      "&widgets/*": ["src/widgets/*"],
      "&shared/*": ["src/shared/*"],
      "&pages/*": ["src/pages/*"],
      "&entities/*": ["src/entities/*"]
    }
  },
  "exclude": ["node_modules"]
}
